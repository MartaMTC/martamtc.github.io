---
const { color = "green",title = "" }: BadgeProps = Astro.props;

interface BadgeProps {
	color?: "red" | "green" | "purple" | "orange" | "white";
	title?: string;
}

const colors = {
	red: "bg-brand-red/5 text-brand-red ring-1 ring-brand-red",
	green: "bg-brand-green/5 text-brand-green ring-1 ring-brand-green",
	purple: "bg-brand-purple/5 text-brand-purple ring-1 ring-brand-purple",
	orange: "bg-brand-orange/5 text-brand-orange ring-1 ring-brand-orange",
	white: "bg-white",
};
---

<span class={`inline-flex not-prose items-center mb-4 rounded-full px-3 py-1 text-base font-semibold ${colors[color]}`}
	>{title}</span
>
